<div class="row justify-space-between-md" style="display: block; margin: 0 auto; text-align: center;">
  <div class="col-sm-12 col-md-3">
    <h2 class="page-title" style="text-align: center;">Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" style="text-align: center;">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" style="display: block; margin: 0 auto;"  type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-sm-12 col-md-3">
    <h2 class="page-title"style="text-align: center;" >Signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" style="display: block; margin: 0 auto;" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="js/login.js"></script>